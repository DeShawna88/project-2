<%- include('../partials/html-head') %>
    <%- include('../partials/nav') %>
      <h1>Edit <%= dessert.name %></h1>
    <form action="/desserts/<%=dessert._id%>?_method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" value="<%= dessert.name %>" />
  
      <label for="recipe">Enter Recipe</label>
      <textarea id="recipe" name="recipe" rows="4" cols="40" value="<%= dessert.recipe %>" ></textarea>

      <label for="newSubmit">Is this a new submission?</label>
    <input type="checkbox" name="newSubmit" id="newSubmit" />
  
      <button type="submit">Update Recipe</button>
    </form>
  </body>
</html>